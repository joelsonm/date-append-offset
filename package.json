{
  "name": "date-append-offset",
  "version": "1.0.0",
  "description": "Append timezone offset to ISO date strings safely and consistently",
  "keywords": [
    "timezone",
    "offset",
    "datetime",
    "iso",
    "utils"
  ],
  "author": "Joelson",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/append-offset.ts --format esm,cjs --dts --out-dir dist --clean",
    "test": "vitest run",
    "dev": "vitest"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "semantic-release": "^24.2.5",
    "tsup": "^7.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
